{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            { "name": "next" }
        ],
        "paths": {
            "@/components/*": ["./components/*"],
            "@/api": ["./api"],
            "@/api/*": ["./api/*"],
            "@/styles/*": ["./styles/*"],
            "@/types/*": ["./types/*"],
            "@/utils": ["./utils"],
            "@/utils/*": ["./utils/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/[event_id]/startlist/page.jsx", "app/performance/[id]/ClientPage.jsx", "app/auth/page.jsx", "app/provider.jsx", "app/page.jsx", "app/layout.jsx"],
    "exclude": ["node_modules"]
}
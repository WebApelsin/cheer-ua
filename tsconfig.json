{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            { "name": "next" }
        ],
        "paths": {
            "@/components/*": ["./components/*"],
            "@/hooks": ["./hooks"],
            "@/hooks/*": ["./hooks/*"],
            "@/styles/*": ["./styles/*"],
            "@/types/*": ["./types/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/startlist/page.jsx", "app/performance/[id]/page.jsx"],
    "exclude": ["node_modules"]
}